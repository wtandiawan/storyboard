<% provide(:title, @user.username) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1> <%= @user.username %></h1>
        <%= gravatar_for @user %>
    </section>
     <% if signed_in? && current_user?(@user) %>
     <%= link_to "Write a story", new_story_path, class: "btn btn-large btn-primary" %>
     <% end %> 
 </aside>
  <div class="span8" class ="hero-unit">
    <h1 style="text-align:left;"><%=@user.username%>'s Stories</h1>
    <% if @user.stories.any? %>
      <ul class="microposts">
        <%= render @stories %>
      </ul>
      <%= will_paginate @stories %>
    <% else %>
       <h4>You haven't posted any stories</h4>
    <% end %>
  </div>
</div>
